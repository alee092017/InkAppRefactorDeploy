<p id="notice"><%= notice %></p>

<h1>Pens</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Description</th>
      <th>Tip size</th>
      <th>Ink color</th>
      <th>Model no</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pens.each do |pen| %>
      <tr>
        <td><%= image_tag pen.image.url(:thumb) %></td>
        <td><%= pen.name %></td>
        <td><%= pen.description %></td>
        <td><%= pen.tip_size %></td>
        <td><%= pen.ink_Color %></td>
        <td><%= pen.model_no %></td>
        <td><%= link_to 'Show', pen %></td>
        <td><%= link_to 'Edit', edit_pen_path(pen) %></td>
        <td><%= link_to 'Destroy', pen, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

